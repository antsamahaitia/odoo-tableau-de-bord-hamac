<odoo>
    <!-- Vue Recherche -->
    <record id="view_bus_search" model="ir.ui.view">
        <field name="name">hamac.bus.search</field>
        <field name="model">hamac.bus</field>
        <field name="arch" type="xml">
            <search>
                <field name="bus_numero"/>
                <field name="date_pose"/>
                <field name="nom_campagne"/>
                <field name="etat_affiche"/>
                <field name="type_bus"/>
                <field name="date_fin"/>
            </search>
        </field>
    </record>

    <!-- Vue Liste -->
    <record id="view_bus_tree" model="ir.ui.view">
        <field name="name">hamac.bus.tree</field>
        <field name="model">hamac.bus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bus_numero"/>
                <field name="date_pose"/>
                <field name="nom_campagne"/>
                <field name="etat_affiche"/>
                <field name="type_bus"/>
                <field name="date_fin"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_bus_form" model="ir.ui.view">
        <field name="name">hamac.bus.form</field>
        <field name="model">hamac.bus</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="bus_numero" placeholder="NumÃ©ro du Bus..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_pose"/>
                            <field name="date_fin"/>
                            <field name="nom_campagne"/>
                        </group>
                        <group>
                            <field name="etat_affiche"/>
                            <field name="type_bus"/>
                        </group>
                    </group>
                    <!-- Champ Many2many pour plusieurs photos -->
                <group>
                    <field name="photos_ids" widget="many2many_binary" options="{'no_create': True}" />
                    <field name="description"/>
                </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
